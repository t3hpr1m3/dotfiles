alignment top_right
background yes
border_width 1
cpu_avg_samples 2
default_outline_color 000000
default_shade_color 000000
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades yes
xftfont snap:size=8
xftalpha 0.5
font snap:size=8
gap_x 15
gap_y 60
maximum_width 310
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
own_window yes
own_window_class Conky
own_window_type override
own_window_transparent yes
stippled_borders 0
update_interval 3
uppercase no
use_spacer left
use_xft yes
show_graph_scale no
show_graph_range no
text_buffer_size 512
top_cpu_separate false

mpd_host 127.0.0.1
mpd_port 6600

# Colors
default_color e4e3e3
color0 a083cc #Purple ( main title )
color1 f9d0ff #pinkish ( headings/current date )
color2 ababaa #dark gray ( labels/calendar )
color3 4f4165 #dark purple (hr's)
color4 e4e3e3 #light gray/white ( plain text )
