function _ansible_base {
	ansible_command=$1
	shift

	docker run \
		--rm -it \
		-v $(pwd):/usr/src/app \
		--name ansible \
		-v $SSH_AUTH_SOCK:/ssh-agent \
		-e SSH_AUTH_SOCK=/ssh-agent \
		--tmpfs /tmp \
		jdubz/ansible \
		$ansible_command "$@"
}

function ansible {
	_ansible_base ansible "$@"
}

function ansible-playbook {
	_ansible_base ansible-playbook "$@"
}

function ansible-vault {
	_ansible_base ansible-vault "$@"
}

function aws {
	docker run \
		--rm -it \
		-v $HOME/.aws:/root/.aws \
		--name aws \
		t3hpr1m3/aws \
		"$@"
}

function bats {
	test_path=$1
	if [[ -z "$test_path" ]]; then
		echo "You must supply the path to your tests." >&2
		exit 1
	fi
	code_path=$(dirname $(realpath $test_path))

	docker run \
		--rm -it \
		-v $code_path:/my-code \
		dduportal/bats:0.4.0 \
		/my-code/test
}
function eclipse {
	if [[ ! -f /tmp/.eclipse.xauth ]]; then
		touch /tmp/.eclipse.xauth
		xauth nlist :0 | sed -e 's/^..../ffff/' | xauth -f /tmp/.eclipse.xauth nmerge -
	fi
	docker run \
		--rm \
		-v /tmp/.X11-unix:/tmp/.X11-unix \
		-v /tmp/.eclipse.xauth:/tmp/.eclipse.xauth \
		-v $(pwd):/home/eclipse/workspace \
		-e XAUTHORITY=/tmp/.eclipse.xauth \
		-e DISPLAY=unix$DISPLAY \
		--name eclipse \
		t3hpr1m3/eclipse:4.5.1
}

function go {
	if [[ -z "$GOPATH" ]]; then
		echo "GOPATH must be set"
		return 1
	fi

	# Make sure the current directory is somewhere inside GOPATH
	if [[ "$(pwd)" == "$GOPATH"* ]]; then
		# make the path relative so it can be resolved in the container
		workdir="${PWD/#$GOPATH/}"

		# fire it off
		docker run \
			--rm \
			-t \
			-v $GOPATH:/go \
			--name go \
			jdubz/golang:1.0.0 \
			$workdir \
			$1
	else
		echo "Current directory not in GOPATH"
		return 1
	fi
}

function gradle {
	if [[ ! -f /tmp/.gradle.xauth ]]; then
		touch /tmp/.gradle.xauth
		xauth nlist :0 | sed -e 's/^..../ffff/' | xauth -f /tmp/.gradle.xauth nmerge -
	fi
	if [[ ! -d $(pwd)/.gradle_caches ]]; then
		mkdir $(pwd)/.gradle_caches
	fi
	docker run \
		--rm \
		-t \
		-v /tmp/.X11-unix:/tmp/.X11-unix \
		-v /tmp/.gradle.xauth:/tmp/.gradle.xauth \
		-v $(pwd):/usr/src/app \
		-v $(pwd)/.gradle_caches:/root/.gradle/caches \
		-e XAUTHORITY=/tmp/.gradle.xauth \
		-e DISPLAY=unix$DISPLAY \
		--name gradle \
		jdubz/gradle:2.0 "$@"
}

